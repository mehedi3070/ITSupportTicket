@model IEnumerable<ITSupportTicket.tblStaffTicket>

@{
    ViewBag.Title = "Support Ticket Management System by Ntitas IT Lim.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Solve Ticket Report</h3>
<script type="text/javascript">

    function pt() {

        var v = document.body.innerHTML;
        document.body.innerHTML = document.getElementById("print").innerHTML;
        print();
        document.body.innerHTML = v;


    }
</script>
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div id="print">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attachment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblTicket.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Attachment)*@
                    <a href="../Uploads/File/@(item.StaffTicketId.ToString()+"_"+item.Attachment)">Download</a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tblTicket.Name)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.StaffTicketId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StaffTicketId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.StaffTicketId })*@
                </td>
            </tr>
        }

    </table>
</div>
<div><input type="button" class="btn btn-success btn-sm" value="Print" onclick="pt()" /></div>